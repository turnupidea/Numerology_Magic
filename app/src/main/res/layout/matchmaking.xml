<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="@mipmap/landingpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_New_Match_Making"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:textColor="@color/textColor"
            android:id="@+id/New_back_Match_Making"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/toolbar_arrowback"/>
        <ImageView
            android:textColor="@color/textColor"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/logoname"/>
        <ImageView
            android:id="@+id/New_matchMaking_setting"
            android:background="@drawable/navigation_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="end"/>
        <ImageView
            android:id="@+id/New_matchMaking_whatsapp"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:src="@mipmap/whatsappicon"
            android:layout_width="40dp"
            android:layout_height="40dp"    />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbar_New_Match_Making"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/mainlinear1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/matchmaking1"
                    android:fontFamily="@font/font_edittext"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:background="@mipmap/dobinput"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/matchLinear1"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/edit1"
                        android:fontFamily="@font/font_edittext"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/edittextcolor"
                        android:textColorHint="@color/edittextcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="dd"
                        android:maxLength="2"
                        android:textAlignment="center" />
                    <EditText
                        android:id="@+id/edit2"
                        android:fontFamily="@font/font_edittext"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/edittextcolor"
                        android:textColorHint="@color/edittextcolor"
                        android:layout_below="@+id/edit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="mm"
                        android:maxLength="2"
                        android:textAlignment="center" />
                    <EditText
                        android:id="@+id/edit3"
                        android:fontFamily="@font/font_edittext"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/edittextcolor"
                        android:textColorHint="@color/edittextcolor"
                        android:layout_below="@+id/edit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="yyyy"
                        android:maxLength="4"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/mainlinear1"
                android:id="@+id/mainlinear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/matchmaking2"
                    android:fontFamily="@font/font_edittext"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:id="@+id/matchLinear2"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/dobinput"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_below="@+id/matchLinear1"
                    android:orientation="horizontal"
                    android:layout_width="300dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/edit4"
                        android:fontFamily="@font/font_edittext"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/edittextcolor"
                        android:textColorHint="@color/edittextcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="dd"
                        android:maxLength="2"
                        android:textAlignment="center"/>
                    <EditText
                        android:id="@+id/edit5"
                        android:fontFamily="@font/font_edittext"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/edittextcolor"
                        android:textColorHint="@color/edittextcolor"
                        android:layout_below="@+id/edit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="mm"
                        android:maxLength="2"
                        android:textAlignment="center" />
                    <EditText
                        android:id="@+id/edit6"
                        android:fontFamily="@font/font_edittext"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/edittextcolor"
                        android:textColorHint="@color/edittextcolor"
                        android:layout_below="@+id/edit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="yyyy"
                        android:maxLength="4"
                        android:textAlignment="center" />
                </LinearLayout>
                <Button
                    android:id="@+id/show"
                    android:layout_gravity="center"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/clickbutton" />

                <TextView
                    android:textSize="15pt"
                    android:text="@string/text_result"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/font_edittext"
                    android:textAlignment="center"/>
                <ImageView
                    android:id="@+id/matchMaking_displayResult"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/result"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                android:textSize="5pt"
                android:typeface="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/font_edittext"
                android:maxLength="2" />
            <TextView
                android:id="@+id/resultPartner"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                android:textSize="5pt"
                android:typeface="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_edittext"
                android:maxLength="2" />
            <TextView
                android:id="@+id/first_nameArray"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                android:textSize="5pt"
                android:typeface="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_edittext"/>
            <TextView
                android:id="@+id/second_nameArray"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                android:textSize="5pt"
                android:typeface="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_edittext"/>
            <TextView
                android:id="@+id/common"
                android:textSize="15pt"
                android:typeface="serif"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font_edittext" />
            <TextView
                android:id="@+id/percentLove"
                android:visibility="invisible"
                android:textSize="5pt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/percentCalculate"
                android:visibility="invisible"
                android:textSize="5pt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/percentLove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/finalResult"
                android:visibility="invisible"
                android:textSize="5pt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/resultPartner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>