<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/babyName"
    android:background="@mipmap/landingpage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BabyName">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_babyName"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:textColor="@color/textColor"
            android:id="@+id/back_babyName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/toolbar_arrowback"/>
        <ImageView
            android:textColor="@color/textColor"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:src="@mipmap/logoname"/>
        <ImageView
            android:id="@+id/babyName_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="end"
            android:background="@drawable/navigation_setting" />
        <ImageView
            android:id="@+id/babyName_question"
            android:layout_gravity="end"
            android:layout_marginRight="5dp"
            android:src="@mipmap/whatsappicon"
            android:layout_width="40dp"
            android:layout_height="40dp"    />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_babyName"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:text="@string/luckyNumber"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/font_edittext" />
                    <TextView
                        android:id="@+id/babyName_text"
                        android:textSize="25pt"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:maxLength="1"
                        android:fontFamily="@font/font_edittext"
                        android:textAlignment="center" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="45dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:text="@string/karmicNumber"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/font_edittext" />
                    <TextView
                        android:id="@+id/home_text_karmicNo_babyName"
                        android:textSize="25pt"
                        android:typeface="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:maxLength="1"
                        android:fontFamily="@font/font_edittext"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/text1_babyName"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@mipmap/babynames" />
            <EditText
                android:id="@+id/edit1_babyName"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_below="@+id/text1_babyName"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@mipmap/dobinput"
                android:fontFamily="@font/font_edittext"
                android:hint="@string/babyname1"
                android:maxLength="30"
                android:textAlignment="center"
                android:textColor="@color/edittextcolor"
                android:textColorHint="@color/edittextcolor"
                android:textSize="16sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/button1_baby_Name"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@mipmap/clickbutton" />
            <TextView
                android:textSize="15pt"
                android:text="@string/text_result"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_edittext"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/babyName_displayResult"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />
            <TextView
                android:id="@+id/babyName_result"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_edittext"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="60pt"
                android:textStyle="bold"
                android:typeface="serif" />
            <TextView
                android:id="@+id/babyName_bestday"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_edittext"
                android:textColor="@color/textColor"
                android:textSize="10pt"
                android:textStyle="normal|bold|italic"
                android:typeface="serif" />
            <TextView
                android:id="@+id/babyName_bestmonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/font_edittext"
                android:textColor="@color/textColor"
                android:textSize="10pt"
                android:textStyle="normal|bold|italic"
                android:typeface="serif" />
            <TextView
